<div class="p-5 bg-white" id="content">
  <h1><%= @myco_file.name %></h1>

  <div class="row">
  
    <div class="col">
      <div class="ps-3">
        <h3 class="fs-5"><strong>Shape: </strong></h3>
          <p class="ps-3"><%= @myco_file.shape %></p>
        <h3 class="fs-5"><strong>Color: </strong></h3>
          <p class="ps-3"><%= @myco_file.color %></p>
        <h3 class="fs-5"><strong>Gills: </strong></h3>
          <p class="ps-3"><%= @myco_file.gills %></p>
        <h3 class="fs-5"><strong>Pores: </strong></h3>
          <p class="ps-3"><%= @myco_file.pores %></p>
        <h3 class="fs-5"><strong>Edibility: </strong></h3>
          <p class="ps-3"><%= @myco_file.edibility %></p>
        <h3 class="fs-5"><strong>Season: </strong></h3>
          <p class="ps-3"><%= @myco_file.season %></p>
        <h3 class="fs-5"><strong>Location: </strong></h3>
          <p class="ps-3"><%= @myco_file.location %></p>
      </div>
    </div>

    <div class="col">
      <h2>Photos:</h2>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      
      <%= render @myco_file.photos %>
      </div>
    </div>
  </div>
  <div class="btn-group btn-group-lg w-100 pt-4">
  
    <%= link_to "Edit", edit_myco_file_path(@myco_file), class:"btn btn-outline-primary m-2" %>
    <%= link_to "Delete", myco_file_path(@myco_file),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class:"btn btn-outline-danger m-2"
                    %>
  </div>
</div>

